{
  "compilerOptions": {
    "checkJs": false,
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@containers/*": [
        "containers/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@remotes/*": [
        "remotes/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "~/*": [
        "*"
      ]
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "./public",
    "./.cache"
  ],
  "include": [
    "./src/**/*"
  ]
}
